 <% const news = paginateData.data%>

 <% news.forEach(news => {%>

                <div class="post-content">
                    <div class="row">
                        <div class="col-md-4">
                        <a class="post-img" href='/single/<%= news._id%>'><img src="<%= news.images%>" alt="iamge_not_found"/></a>
                        </div>
                        <div class="col-md-8">
                        <div class="inner-content clearfix">
                            <h3><a href='/single/<%= news._id%>'><%= news.title%></a></h3>
                            <div class="post-information">
                                <span>
                                <i class="fa fa-tags" aria-hidden="true"></i>
                                <a href='/category/<%= news.category.slug%>'><%= news.category.name %></a>
                                </span>
                                <span>
                                <i class="fa fa-user" aria-hidden="true"></i>
                                <a href='/author/<%= news.author._id%>'><%= news.author.fullname %></a>
                                </span>
                                <span>
                                <i class="fa fa-calendar" aria-hidden="true"></i>
                                <%= news.createAt %>
                                </span>
                            </div>
                            <p class="description">
                               <%- news.content.substring(0,30) + '...' %>
                            </p>
                            <a class='read-more pull-right' href='/single/<%= news._id%>'>read more</a>
                        </div>
                        </div>
                    </div>
                </div>
            <%}); %>


             <%
        function queryBuilder(query,page) {
            const params = new URLSearchParams(query);
            params.set('page',page);
            return '?'+ params.toString();
        }
        
        
        %>
             <nav>
    <ul class="pagination">

        <!-- Previous Button -->
        <% if (paginateData.pagination.hasPrevPage) { %>
            <li class="page-item">
                <a class="page-link" href="<%= queryBuilder(query,paginateData.pagination.prevPage) %>">Previous</a>
            </li>
        <% } else { %>
            <li class="page-item disabled">
                <a class="page-link" href="#">Previous</a>
            </li>
        <% } %>

        <!-- Page Numbers -->
        <% for (let i = 1; i <= paginateData.pagination.totalPages; i++) { %>
            <li class="page-item <%= (i === paginateData.pagination.currentPage) ? 'active' : '' %>">
                <a class="page-link" href="<%= queryBuilder(query,i) %>"><%= i %></a>
            </li>
        <% } %>

       

        <!-- Next Button -->
        <% if (paginateData.pagination.hasNextPage) { %>
            <li class="page-item">
                <a class="page-link" href="<%= queryBuilder(query,paginateData.pagination.nextPage) %>">Next</a>
            </li>
        <% } else { %>
            <li class="page-item disabled">
                <a class="page-link" href="#">Next</a>
            </li>
        <% } %>

    </ul>
</nav>
