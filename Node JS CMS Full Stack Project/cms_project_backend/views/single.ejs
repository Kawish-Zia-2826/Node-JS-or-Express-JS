                  <div class="post-container">
                    <div class="post-content single-post">
                      <h3><%= singleNews.title%></h3>
                      <div class="post-information">
                        <span>
                          <i class="fa fa-tags" aria-hidden="true"></i>
                          <a href="/category/<%= singleNews.category.slug%>"><%= singleNews.category.name%></a>
                        </span>
                        <span>
                          <i class="fa fa-user" aria-hidden="true"></i>
                          <a href='/author/<%= singleNews.author._id%>'><%= singleNews.author.fullname%></a>
                        </span>
                        <span>
                          <i class="fa fa-calendar" aria-hidden="true"></i>
                          <%= singleNews.createAt%>
                        </span>
                      </div>
                      <img class="single-feature-image" src="/uploads/<%= singleNews.images%>" alt=""/>
